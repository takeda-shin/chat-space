.information-box
  グループを作成しました
.container
  .chat-side
    .side-header
      .side-header__box
        .side-header__box__user-name
          takeda
        = link_to "###", class: "side-header__box__new-group" do
          = fa_icon 'edit', class: "side-header__box__icon"
        = link_to "###", class: "side-header__box__edit-user" do
          = fa_icon 'cog', class: "side-header__box__icon"
    .groups
      = render partial: "group" 
  .chat-main
    .main-header
      .main-header__left-box
        .main-header__left-box__group-name
          sample
        .main-header__left-box__group-members
          Members: user1 user2
      .main-header__edit-btn
        Edit
    .messages
      = render partial: "message"
    .form
      .form__input-box
        .form__input-box__contents
          .form__input-box__contents__text
            Type a message
          = link_to "###", class: "form__input-box__contents__image" do
            = fa_icon 'image', class: "form__input-box__contents__icon"
      .form__submit-btn
        Send