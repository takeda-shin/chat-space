.container
  .chat-side
    .side-header
      .side-header__box
        .side-header__box__user-name
          = current_user.name
        = link_to new_group_path do
          = fa_icon 'pencil-square-o', class: "side-header__box__icon"
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: "side-header__box__icon"
    .groups
      = render partial: "group" 
  .chat-main
    .main-header
      .main-header__left-box
        .main-header__left-box__group-name
          sample
        .main-header__left-box__group-members
          Members: user1 user2
      .main-header__edit-btn
        Edit
    .messages
      = render partial: "message"
    .form
      .form__input-box
        .form__input-box__contents
          .form__input-box__contents__text
            Type a message
          %form{:class => "form__input-box__contents__image"}
            %label
              %span
              = fa_icon 'image', class: "form__input-box__contents__icon"
              %input{:type => "file", :class => "form__input-box__contents__image__select"}
      .form__submit-btn
        Send